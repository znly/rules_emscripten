package(default_visibility = ['//visibility:public'])

filegroup(
    name = "toolchain",
    srcs = glob(
        include = [
            "*",
            "system/include/**",
            "system/local/include/**",
            "tools/**",
        ],
    ),
)

filegroup(
    name = "srcs",
    srcs = glob(
        include = [
            "src/**",
        ],
    ),
)
